<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="myFirst">

	<xacro:property name="PI" value="3.1415926" />
	<xacro:property name="dgree" value="${PI/180}" />
	<xacro:property name="MM" value="0.001" />
	<xacro:property name="D_th1" value="${0.1*dgree}" />
	<xacro:property name="D_th2" value="${0.2*dgree}" />
	<xacro:property name="D_th3" value="${0.3*dgree}" />
	<xacro:property name="D_th4" value="${0.4*dgree}" />
	<xacro:property name="D_th5" value="${0.5*dgree}" />
	<xacro:property name="D_th6" value="${0.6*dgree}" />


	<xacro:property name="D_L1" value="${0.0*MM}" />
	<xacro:property name="D_L2" value="${0.0*MM}" />
	<xacro:property name="D_L3" value="${0.0*MM}" />
	<xacro:property name="D_L4" value="${0.0*MM}" />
	<xacro:property name="D_L5" value="${0.0*MM}" />

	
	<link name="base_link">
		<visual>
			<geometry>
				<cylinder length="0.1" radius="0.2"/>
			</geometry>
			<origin xyz="0 0 0.05" rpy="0 0 0"/>
		</visual>	
	</link>
	<link name="link_1">
		<visual>
			<geometry>
				<box size="0.2 0.1 0.1"/>	
			</geometry>
			<origin xyz="0 0 0.05" rpy="0 0 0"/>
			<material name="blue">
        		<color rgba="0 0 .8 1"/>
      		</material>
		</visual>
		
	</link>

	<link name="link_2">
		<visual>
			<geometry>
				<cylinder length="0.3" radius="0.025"/>	
			</geometry>
			<origin xyz="0 -0.15 0" rpy="1.57 0 0"/>
			<material name="yellow">
        		<color rgba="1 1 0 1"/>
      		</material>
		</visual>
	</link>

	<link name="link_3">
		<visual>
			<geometry>
				<cylinder length="0.05" radius="0.025"/>	
			</geometry>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="white">
        		<color rgba="1 1 1 1"/>
      		</material>
		</visual>
	</link>

	<link name="link_4">
		<visual>
			<geometry>
				<cylinder length="0.3" radius="0.025"/>	
			</geometry>
			<origin xyz="0 0 -0.15" rpy="0 0 0"/>
			<material name="yellow"/>
		</visual>
	</link>

	<link name="link_5">
		<visual>
			<geometry>
				<cylinder length="0.05" radius="0.025"/>	
			</geometry>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="white"/>
		</visual>
	</link>

	<link name="link_6">
		<visual>
			<geometry>
				<cylinder length="0.1" radius="0.025"/>	
			</geometry>
			<origin xyz="0 0 -0.05" rpy="0 0 0"/>
			<material name="yellow"/>
		</visual>
	</link>


	<joint name="joint_0" type="fixed">
		<parent link="base_link"/>
		<child link="link_1"/>
		<origin xyz="0 0 0.1" rpy="0 0 0"/>
	</joint>
	<joint name="joint_1" type="revolute">
		<parent link="base_link"/>
		<child link="link_1"/>
		<limit effort="100" velocity="180" lower="-3.14" upper="3.14"/>
		<origin xyz="0 0 0.1" rpy="0 0 ${D_th1}"/>
		<axis xyz="0 0 1"/>
	</joint>
	<joint name="joint_2" type="revolute">
		<parent link="link_1"/>
		<child link="link_2"/>
		<limit effort="100" velocity="180" lower="-3.14" upper="3.14"/>
		<origin xyz="${0.1+D_L1} 0 0" rpy="${-PI/2} ${D_th2} 0"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="joint_3" type="revolute">
		<parent link="link_2"/>
		<child link="link_3"/>
		<limit effort="100" velocity="180" lower="-3.14" upper="3.14"/>
		<origin xyz="0 ${-0.3-D_L2} 0" rpy="${PI} 0 ${-PI/2-D_th3}"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="joint_4" type="revolute">
		<parent link="link_3"/>
		<child link="link_4"/>
		<limit effort="100" velocity="180" lower="-3.14" upper="3.14"/>
		<origin xyz="${0.02+D_L3} 0 0" rpy="${-PI/2} ${D_th4} 0"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="joint_5" type="revolute">
		<parent link="link_4"/>
		<child link="link_5"/>
		<limit effort="100" velocity="180" lower="-3.14" upper="3.14"/>
		<origin xyz="0 0 ${-0.3+D_L4}" rpy="${PI/2} -${D_th5} 0"/>
		<axis xyz="0 0 1"/>
	</joint>
	<joint name="joint_6" type="revolute">
		<parent link="link_5"/>
		<child link="link_6"/>
		<limit effort="100" velocity="180" lower="-3.14" upper="3.14"/>
		<origin xyz="0 ${-0.1+D_L5} 0" rpy="${PI/2} -${D_th6} 0"/>
		<axis xyz="0 0 1"/>
	</joint>


</robot>
